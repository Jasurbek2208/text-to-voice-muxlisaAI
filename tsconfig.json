{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@types/*": ["types/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@assets/*": ["assets/*"],
      "@layout/*": ["layout/*"],
      "@router/*": ["router/*"],
      "@helpers/*": ["helpers/*"],
      "@service/*": ["service/*"],
      "@components/*": ["components/*"],
    },
  },
  "include": ["./src"],
  "composite": true,
  "references": [{ "path": "./tsconfig.node.json" }],
}